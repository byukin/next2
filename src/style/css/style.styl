//Roboto Slab
@import url('fonts/roboto/font.css')
//Play
@import url('fonts/play/font.css')
//@import url('../js-libs/onepage-scroll/onepage-scroll.css')

html
	-ms-text-size-adjust 100%
	-webkit-text-size-adjust 100%
	font-family 'Play'
	line-height 1.2
	color #fff
	width 100%
	height 100%
body
	padding 0
	margin 0
.clearfix:after
	content "."
	display block
	height 0
	clear both
	visibility hidden
.plan
	width 960px
	height 600px
	border-right 1px solid #a4fcfd
	border-bottom 1px solid #a4fcfd
	position fixed
	z-index 1000000
	box-sizing border-box
	display none
.plan2
	display none
	width 1140px
	border-right 1px solid #a4fcfd
	position fixed
	z-index 1000000
	height 100%
	box-sizing border-box
	display none

a
	color #fff
	text-decoration none
	border-bottom 1px solid rgba(255,255,255,.3)
	&:hover
		border-bottom 1px solid rgba(255,255,255,.8)
ul,li
	margin 0
	padding 0
*
	outline none
section
	padding 30px
	box-sizing border-box
h1
	font-size 40px
	font-weight 300
	text-transform uppercase
	font-family 'Roboto Slab'
h2
	font-size 30px
	line-height 1
	font-family 'Roboto Slab'
	margin-bottom 10px
h3
	font-size 24px
	line-height 1
	font-family 'Roboto Slab'
	font-weight normal
	margin-bottom 10px
.layout
	min-width 960px
	max-width 1920px
	min-height 600px
	max-height 1080px
	position relative
	width 100%
	height 100%
	margin 0 auto
.limit
	max-width 1440px
	min-width 960px
	margin 0 auto
	position relative
.header-block
	position absolute
	z-index 100
	left 30px
	right 30px
	top 30px
	padding 0
	margin auto
	white-space nowrap
.header-logo
	width 140px
	height 80px
	margin-top -10px
	margin-right 80px
	background url(icons/logo.svg)
	background-repeat no-repeat
	display inline-block
	background-size contain
	vertical-align top
.header-anchors
	font-size 14px
	line-height 1.414
	font-family 'Play'
	text-transform uppercase
	vertical-align top
	display inline-block
	margin-right 40px
	margin-top 10px
.header-anchors__item
	display inline-block
	list-style-type none
	padding-left 15px
	padding-right 15px
	box-sizing border-box
.header-anchors__item a.active
	border-bottom none
	opacity .4
	pointer-events none
.header-geo
	display inline-block
	font-family "Play"
	font-size .75rem
	text-transform uppercase
	margin-right 30px
	margin-top 10px
.header-geo-labels__city
	display inline-block
	margin-left 5px
	margin-right 5px
	border-bottom 1px dotted #fff
.header-geo-labels__city.active
	border-bottom none
.header-geo-labels__phone
	font-size 1.4375rem
.header-geo-labels__phone span
	font-size .8rem
	display inline-block
	margin-top 3px
	vertical-align top
.header-contact
	display inline-block
	position relative
.header-contact__item
	display inline-block
.header-contact__link_call-me
	border-bottom 1px dotted rgba(255,255,255,.3)
	margin-right 10px
.header-modals
	position absolute
	right 0
	white-space nowrap
.header-modals__search
	position absolute
.header-modals__search
	position absolute
	width 20px
	height 20px
	top -33px
	right 30px
	opacity 0.4
	font-size 1rem
	cursor pointer
	&:hover
		opacity 1
.header-modals__menu
	position absolute
	width 20px
	height 20px
	top -30px
	right 0px
	background url(icons/menu.svg)
	background-size contain
	background-repeat no-repeat
	opacity 0.4
	cursor pointer
	&:hover
		opacity 1


.main-content-1.active
	display block
.main-content-2.active
	display block
.main-content-3.active
	display block
.main-content-1
	position absolute
	display none
	background-size cover
	background-position center center
	color #fff
	width 100%
	height 100%
	background-image url(images/main-first.jpg)
.main-content-2
	position absolute
	display none
	background-size cover
	background-position center center
	color #fff
	width 100%
	height 100%
	background-image url(images/main-second.jpg)
.main-content-3
	position absolute
	display none
	background-size cover
	background-position center center
	color #fff
	width 100%
	height 100%
	background-image url(images/main-third.jpg)

.main-content-holder
	position absolute
	bottom 40px
	left 30px
	right 30px
	margin auto

.main-content-1__subtitle
.main-content-2__subtitle
.main-content-3__subtitle
	font-size 21px
	margin-top -20px


.main-content-1-left
	float left
	width 48%
.main-content-1-right
	float right
	width 48%
	margin-top 20px


.main-content-form
	width 300px
	margin-top 30px
	padding 0
.main-content-form__title
	font-size 24px
	margin-bottom 20px
	font-family 'Roboto Slab'
.main-content-form__input
	background transparent
	border 1px solid rgba(255,255,255,0.4)
	border-radius 3px
	margin-bottom 10px
	color #fff
	font-family 'Play'
	width 100%
	display block
	font-size 15px
	padding 10px 15px
.main-content-form__submit
	width 100%
.main-content-form__button
	background transparent
	border 1px solid rgba(255,255,255,0.4)
	border-radius 3px
	color #fff
	font-family 'Play'
	font-size 13px
	padding 10px 15px
	box-sizing border-box
	text-transform uppercase
	cursor pointer
	width 48%
	float left
	white-space nowrap
.main-content-form__button_filled
	border 1px solid #7f018b
	background #7f018b
	border-radius 3px
	color #fff
	font-family 'Play'
	font-size 13px
	padding 10px 15px
	box-sizing border-box
	text-transform uppercase
	cursor pointer
	width 48%
	float right
	white-space nowrap
.main-content-form__button_filled-y
	border 1px solid #cfad16
	background #cfad16
	border-radius 3px
	margin-bottom 10px
	color #fff
	font-family 'Play'
	font-size 13px
	padding 10px 15px
	box-sizing border-box
	text-transform uppercase
	cursor pointer
	white-space nowrap

.main-content-1-advantages
	max-width 80%
	margin 0 auto
.main-content-1-advantages__item
	margin-bottom 20px
	max-width 380px
	font-size 15px
.main-content-1-links
	margin-top 40px
.main-content-1-links__pages
	width 30%
	float left
.main-content-1-links__news
	width 40%
	float left
.main-content-1-links__partners
	width 30%
	float left
.main-content-1-links__label
	background rgba(255,255,255,0.4)
	text-transform uppercase
	white-space nowrap
	padding 5px 8px
	font-size 11px
	display inline-block
	margin-bottom 10px
.main-content-1-links__page
	list-style-type none
	margin-bottom 5px
	font-size 15px
.main-content-1-links__news-item
	display flex
.main-content-1-links__news-date
	font-size 17px
	margin-right 10px
.main-content-1-links__news-text
	font-size 13px
	margin-right 30px







.footer-block
	font-size 13px
	position absolute
	bottom 0px
	left 0
	right 0
	z-index 100
.footer
	position relative
	float right
.footer-social
	display inline-block
	margin-right 10px
.footer-social__item
	list-style-type none
	display inline-block
	margin-right 10px
.footer-social__link
	border none
	opacity .4
	&:hover
		opacity 1
		border none
.footer-copyright
	opacity .4
	display inline-block

@media (min-width 1440px)
	h1
		font-size 46px

@media (min-width 1360px)
	h1
		font-size 46px

@media (max-width 1279px)
	h1
		font-size 36px
	h2
		font-size 24px

@media (max-width 1140px)
	h1
		font-size 36px
	h2
		font-size 24px

@media (max-width 1024px)
	.main-content-1-left
		width 30%

@media (max-height 700px)
	h1
		font-size 30px
	h2
		font-size 24px

@media (min-height 860px)
	.main-content-holder
		bottom 180px
	.main-content-1-links
		margin-top 80px
